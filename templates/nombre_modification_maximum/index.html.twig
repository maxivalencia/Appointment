{% extends 'base.html.twig' %}

{% block title %}Liste de Nombre de Modification Maximum{% endblock %}

{% block body %}
    <h1>Liste de Nombre de Modification Maximum</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ knp_pagination_sortable(nombre_modification_maximums, 'ID', 'nombre_modification_maximum.id') }}</th>
                <th>{{ knp_pagination_sortable(nombre_modification_maximums, 'Nombre de Modification', 'nombre_modification_maximum.nombreModification') }}</th>
                <th>{{ knp_pagination_sortable(nombre_modification_maximums, 'Date d\'Application', 'nombre_modification_maximum.dateApplication') }}</th>
                <th>{{ knp_pagination_sortable(nombre_modification_maximums, 'Actions', 'nombre_modification_maximum.id') }}</th>
            </tr>
        </thead>
        <tbody>
        {% for nombre_modification_maximum in nombre_modification_maximums %}
            <tr>
                <td>{{ nombre_modification_maximum.id }}</td>
                <td>{{ nombre_modification_maximum.nombreModification }}</td>
                <td>{{ nombre_modification_maximum.dateApplication ? nombre_modification_maximum.dateApplication|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_nombre_modification_maximum_show', {'id': nombre_modification_maximum.id}) }}">show</a>
                    <a href="{{ path('app_nombre_modification_maximum_edit', {'id': nombre_modification_maximum.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="mt-4 d-flex justify-content-center">
        <nav>
            <ul class="pagination pagination-lg">
                {{ knp_pagination_render(nombre_modification_maximums) }}
            </ul>
        </nav>
    </div>

    <a href="{{ path('app_nombre_modification_maximum_new') }}">Create new</a>
{% endblock %}
