{% extends 'base.html.twig' %}

{% block title %}Liste du Nombre de Rendez-Vous Par Heure{% endblock %}

{% block body %}
    <h1>Liste du Nombre de Rendez-Vous Par Heure</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre de Rendez-Vous</th>
                <th>Date d'Application</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for nombre_rendez_vous_par_heure in nombre_rendez_vous_par_heures %}
            <tr>
                <td>{{ nombre_rendez_vous_par_heure.id }}</td>
                <td>{{ nombre_rendez_vous_par_heure.nombreRendezVous }}</td>
                <td>{{ nombre_rendez_vous_par_heure.dataApplication ? nombre_rendez_vous_par_heure.dataApplication|date('d/m/Y') : '' }}</td>
                <td>
                    <a href="{{ path('app_nombre_rendez_vous_par_heure_show', {'id': nombre_rendez_vous_par_heure.id}) }}" class="btn-action show"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('app_nombre_rendez_vous_par_heure_edit', {'id': nombre_rendez_vous_par_heure.id}) }}" class="btn-action edit"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun enregistrement trouver</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="mt-4 d-flex justify-content-center">
        <nav>
            <ul class="pagination pagination-lg">
                {{ knp_pagination_render(nombre_rendez_vous_par_heures) }}
            </ul>
        </nav>
    </div>

    <a href="{{ path('app_nombre_rendez_vous_par_heure_new') }}" class="btn-action new"><i class="fas fa-plus"></i> Nouveau</a>
{% endblock %}
