{% extends 'base.html.twig' %}

{% block title %}Liste des Centres{% endblock %}

{% block body %}
    <h1>Liste des Centres</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ knp_pagination_sortable(centres, 'ID', 'centre.id') }}Id</th>
                <th>{{ knp_pagination_sortable(centres, 'Centre', 'centre.centre') }}</th>
                <th>{{ knp_pagination_sortable(centres, 'Code', 'centre.code') }}</th>
                <th>{{ knp_pagination_sortable(centres, 'Actions', 'centre.id') }}</th>
            </tr>
        </thead>
        <tbody>
        {% for centre in centres %}
            <tr>
                <td>{{ centre.id }}</td>
                <td>{{ centre.centre }}</td>
                <td>{{ centre.code }}</td>
                <td>
                    <a href="{{ path('app_centres_show', {'id': centre.id}) }}">show</a>
                    <a href="{{ path('app_centres_edit', {'id': centre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun enregistrement trouver</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="mt-4 d-flex justify-content-center">
        <nav>
            <ul class="pagination pagination-lg">
                {{ knp_pagination_render(centres) }}
            </ul>
        </nav>
    </div>

    <a href="{{ path('app_centres_new') }}">Nouveau</a>
{% endblock %}
