{% extends 'base.html.twig' %}

{% block title %}Liste Jour Spéciale{% endblock %}

{% block body %}
    <h1>Liste Jour Spéciale </h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Date Spéciale</th>
                <th>Ouvrable</th>
                <th>Heure du Début</th>
                <th>Heure de la Fin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for jour_speciale in jour_speciales %}
            <tr>
                <td>{{ jour_speciale.id }}</td>
                <td>{{ jour_speciale.dateSpeciale ? jour_speciale.dateSpeciale|date('d/m/Y') : '' }}</td>
                <td>{{ jour_speciale.ouvrable ? 'Oui' : 'Non' }}</td>
                <td>{{ jour_speciale.heureDebut ? jour_speciale.heureDebut|date('H:i:s') : '' }}</td>
                <td>{{ jour_speciale.heureFin ? jour_speciale.heureFin|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_jour_speciale_show', {'id': jour_speciale.id}) }}" class="btn-action show"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('app_jour_speciale_edit', {'id': jour_speciale.id}) }}" class="btn-action edit"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun enregistrement trouver</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="mt-4 d-flex justify-content-center">
        <nav>
            <ul class="pagination pagination-lg">
                {{ knp_pagination_render(jour_speciales) }}
            </ul>
        </nav>
    </div>

    <a href="{{ path('app_jour_speciale_new') }}" class="btn-action new"><i class="fas fa-plus"></i> Nouveau</a>
{% endblock %}
