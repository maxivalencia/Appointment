{% extends 'base.html.twig' %}

{% block title %}Jour Spéciale{% endblock %}

{% block body %}
    <h1>Jour Spéciale</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ jour_speciale.id }}</td>
            </tr>
            <tr>
                <th>Date Spéciale</th>
                <td>{{ jour_speciale.dateSpeciale ? jour_speciale.dateSpeciale|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Ouvrable</th>
                <td>{{ jour_speciale.ouvrable ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Heure du Début</th>
                <td>{{ jour_speciale.heureDebut ? jour_speciale.heureDebut|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Heure de la Fin</th>
                <td>{{ jour_speciale.heureFin ? jour_speciale.heureFin|date('H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_jour_speciale_index') }}">Retour</a>

    <a href="{{ path('app_jour_speciale_edit', {'id': jour_speciale.id}) }}">edition</a>

