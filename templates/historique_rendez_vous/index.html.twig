{% extends 'base.html.twig' %}

{% block title %}Liste des Historiques des Rendez-Vous{% endblock %}

{% block body %}
    <h1>Liste des Historiques des Rendez-Vous</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Rendez-Vous</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for historique_rendez_vou in historique_rendez_vouses %}
            <tr>
                <td>{{ historique_rendez_vou.id }}</td>
                <td>{{ historique_rendez_vou.rendezVous }}</td>
                <td>
                    <a href="{{ path('app_historique_rendez_vous_show', {'id': historique_rendez_vou.id}) }}" class="btn-action show"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('app_historique_rendez_vous_edit', {'id': historique_rendez_vou.id}) }}" class="btn-action edit"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouver</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="mt-4 d-flex justify-content-center">
        <nav>
            <ul class="pagination pagination-lg">
                {{ knp_pagination_render(historique_rendez_vouses) }}
            </ul>
        </nav>
    </div>

    <a href="{{ path('app_historique_rendez_vous_new') }}" class="btn-action new"><i class="fas fa-plus"></i> Nouveau</a>
{% endblock %}
